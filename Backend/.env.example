# Environment Configuration

# Server
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ai_outreach?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Email Service - Brevo SMTP (Recommended)
# Get credentials from: https://app.brevo.com/settings/keys/smtp
EMAIL_SERVICE=smtp
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_email@example.com
SMTP_PASS=your_brevo_smtp_key_here
SMTP_FROM=your_verified_sender@example.com
SMTP_FROM_NAME=AI Outreach Platform

# Alternative Email Services
# Postmark
# POSTMARK_API_KEY=your_postmark_api_key
# POSTMARK_FROM=your_email@domain.com

# SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM=your_email@domain.com

# Gmail SMTP (for development only)
# SMTP_HOST=smtp.gmail.com
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
GOOGLE_REFRESH_TOKEN=your_refresh_token

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Application URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Scraping Configuration
SCRAPING_CONCURRENCY=3
SCRAPING_RATE_LIMIT=100
SCRAPING_HEADLESS=true
GITHUB_TOKEN=token_data

# Email Campaign Settings
EMAIL_BATCH_SIZE=50
EMAIL_RATE_LIMIT=100
EMAIL_RETRY_ATTEMPTS=3

# Meeting Settings
MEETING_DURATION=30
MEETING_BUFFER=15
TIMEZONE=America/New_York
